page, .content {
  height: 100%;
  background-color: #f8f8f8;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .left-scroll {
  width: 200rpx;
  height: 100%;
  background-color: #FFF;
}
.content .left-scroll .left-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  color: #606266;
  -webkit-transition: .5s ease;
  transition: .5s ease;
  position: relative;
}
.content .left-scroll .left-item.active {
  color: #fa436a;
  background-color: #f8f8f8;
  -webkit-transition: .5s ease;
  transition: .5s ease;
}
.content .left-scroll .left-item.active:before {
  position: absolute;
  content: '';
  width: 10rpx;
  height: 50%;
  left: 0;
  background-color: #fa436a;
}
.content .right-scroll {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: hidden;
  padding-left: 20rpx;
}
.content .right-scroll .second-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 70rpx;
  padding-top: 8rpx;
  font-size: 28rpx;
  color: #333;
}
.content .right-scroll .third-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
